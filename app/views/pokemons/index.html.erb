<p id="notice"><%= notice %></p>

<h1>Pokemons</h1>

<table>
  <thead>
    <tr>
      <th>Pokedex</th>
      <th>Name</th>
      <th>Stats total</th>
      <th>Hp</th>
      <th>Attack</th>
      <th>Defense</th>
      <th>Sp atk</th>
      <th>Sp def</th>
      <th>Speed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pokemons.each do |pokemon| %>
      <tr>
        <td><%= pokemon.pokedex %></td>
        <td><%= pokemon.name %></td>
        <td><%= pokemon.stats_total %></td>
        <td><%= pokemon.hp %></td>
        <td><%= pokemon.attack %></td>
        <td><%= pokemon.defense %></td>
        <td><%= pokemon.sp_atk %></td>
        <td><%= pokemon.sp_def %></td>
        <td><%= pokemon.speed %></td>
        <td><%= link_to 'Show', pokemon %></td>
        <td><%= link_to 'Edit', edit_pokemon_path(pokemon) %></td>
        <td><%= link_to 'Destroy', pokemon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

